if (is_selected &amp;&amp; mouse_check_button(mb_right)) {
    image_xscale = 1;
    path = path_add();
    
   end_x = mouse_x;
   end_y = mouse_y;

   var grid = s_create_grid();
   
   var waypoint = instance_create(end_x,end_y,o_waypoint);
   waypoint = s_find_nearest_spot(waypoint, self, grid);
   
   if (waypoint) {
      mp_grid_path(grid, path, x, y, waypoint.x, waypoint.y, true);
      path_start(path, move_speed, path_action_stop, false);
    }
    
    mp_grid_destroy(grid);
    
    image_speed = 0.3;
    
    direction = point_direction(x,y,mouse_x,mouse_y);
    if (direction &gt;= 305 || direction &lt;= 45) sprite_index = sprite_east;
    else if (direction &gt;= 46 &amp;&amp; direction &lt;= 135) sprite_index = sprite_north;
    else if (direction &gt;= 136 &amp;&amp; direction &lt;= 225) {
